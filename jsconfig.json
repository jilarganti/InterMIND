{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": ["api/**/*.js", "api/**/*.ts", "shared/**/*.js", "shared/**/*.ts", "shared/**/*.vue"],
  "exclude": ["node_modules"]
}
