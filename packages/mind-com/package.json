{
  "name": "mind-com",
  "description": "Live speech translation in video calls",
  "version": "0.3.0",
  "type": "module",
  "scripts": {
    "dev:FE": "vitepress dev docs",
    "dev:BE": "vercel dev",
    "dev": "pnpm dev:FE & pnpm dev:BE",
    "build": "vitepress build docs",
    "translate": "node ../../scripts/translate.js ./scripts/translateConfig.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:traffic-sources": "node --experimental-specifier-resolution=node --loader ts-node/esm __tests__/test-traffic-sources.ts",
    "format": "prettier -w .",
    "lint": "pnpm eslint --cache .",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "shared": "workspace:*"
  },
  "devDependencies": {
    "vitest": "^1.6.0",
    "jsdom": "^24.1.0",
    "@vitest/coverage-v8": "^1.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm --filter mind-com format",
    "pre-push": "pnpm --filter mind-com build"
  }
}
