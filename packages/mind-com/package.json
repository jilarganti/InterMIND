{
  "name": "mind-com",
  "description": "Live speech translation in video calls",
  "version": "0.3.0",
  "type": "module",
  "scripts": {
    "dev:FE": "vitepress dev docs",
    "dev:BE": "vercel dev",
    "dev": "pnpm dev:FE & pnpm dev:BE",
    "build": "vitepress build docs",
    "translate": "tsx ../../scripts/translate.ts ./scripts/translateConfig.ts",
    "test": "vitest --run --coverage",
    "test:unit": "vitest --run __tests__/unit",
    "test:watch": "vitest",
    "test:traffic-sources": "tsx __tests__/test-traffic-sources.ts",
    "format": "prettier -w .",
    "lint": "pnpm eslint --cache .",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "shared": "workspace:*"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm --filter mind-com format",
    "pre-push": "pnpm --filter mind-com test && pnpm --filter mind-com build"
  }
}
