{
  "name": "site",
  "version": "0.3.0",
  "description": "Documentation for Golden Fish",
  "main": "index.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/jilarganti/GoldenFish/tree/main/packages/site"
  },
  "author": "Jil Arganti",
  "license": "CC BY-NC-SA 4.0",
  "type": "module",
  "scripts": {
    "dev:front": "vitepress dev",
    "dev:api": "vercel dev --listen 3000",
    "dev:node": "node server.js",
    "kill-port": "kill -9 $(lsof -t -i:3000) || true",
    "dev": "pnpm kill-port & concurrently \"npm run dev:api\" \"npm run dev:front\"",
    "build:api": "npx vercel build",
    "build": "vitepress build",
    "preview": "vitepress preview",
    "translate": "node --no-deprecation scripts/translate",
    "format": "prettier -w .",
    "prepare": "simple-git-hooks",
    "lint": "pnpm eslint --cache .",
    "deployment": "vercel > deploy.log && grep -o 'https://.*\\.vercel\\.app' deploy.log | xargs -I {} env BASE_URL={} playwright test",
    "convert": "bash -x scripts/toAVIF.sh"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@tsconfig/node22": "^22.0.0",
    "@types/markdown-it-footnote": "^3.0.4",
    "@types/node": "^22.13.5",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/tsconfig": "^0.5.1",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "globals": "^15.15.0",
    "markdown-it-footnote": "^4.0.0",
    "openai": "^4.85.4",
    "prettier": "^3.5.2",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.3",
    "vite": "^5.4.14",
    "vitepress": "^1.6.3"
  },
  "dependencies": {
    "@types/express": "^5.0.0",
    "@vercel/functions": "^2.0.0",
    "@vercel/node": "^5.1.9",
    "body-parser": "^1.20.3",
    "concurrently": "^9.1.2",
    "express": "^4.21.2",
    "libphonenumber-js": "^1.12.0",
    "pipedrive": "^23.4.3",
    "uuid": "^11.1.0",
    "vue": "^3.5.13"
  },
  "prettier": {
    "$schema": "https://json.schemastore.org/prettierrc",
    "semi": false,
    "printWidth": 160
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm format",
    "pre-push": "pnpm build"
  }
}
